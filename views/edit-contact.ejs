<%- include('layouts/header') %>
<%- include('layouts/nav') %>


<div class="container mt-3">
  <div class="row">
    <div class="col-md-6"></div>
    <h2>Ubah data</h2>

    <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
          <% }) %>     
        </ul>
      </div>
    <% } %>

    <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= (contact._id) %>">
        <input type="hidden" name="oldName" value="<%= (contact.oldName) ? contact.oldName : contact.nama %>">

      <div class="mb-3">
        <label for="nama" class="form-label">nama</label>
        <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">email</label>
        <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>">
      </div>
      <div class="mb-3">
        <label for="nohp" class="form-label">nohp</label>
        <input type="text" class="form-control" id="nohp" name="nohp" required value="<%= contact.nohp %>">
      </div>
      <button type="submit" class="btn btn-primary">ubah data</button>
    </form>
  </div>
</div> 



<%- include('layouts/footer') %>